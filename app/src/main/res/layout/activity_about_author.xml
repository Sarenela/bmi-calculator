<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutAuthorActivity">


    <TextView
        android:id="@+id/aboutAuthorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/author_title_margin_start"
        android:layout_marginTop="@dimen/author_title_margin_top"
        android:layout_marginEnd="@dimen/author_title_margin_start"
        android:text="@string/about_author"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="@dimen/authorname_width"
        android:layout_height="@dimen/authorname_height"
        android:layout_marginStart="@dimen/authorname_m_start"
        android:layout_marginEnd="@dimen/authorname_m_end"
        android:fontFamily="monospace"
        android:text="@string/author"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/authorDescriptionText"
        android:layout_width="@dimen/author_description_width"
        android:layout_height="@dimen/author_description_height"
        android:layout_marginTop="@dimen/author_description_m_top"
        android:fontFamily="monospace"
        android:text="@string/author_description"
        android:textAlignment="center"
        android:textSize="@dimen/author_description_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/author_image_width"
        android:layout_height="@dimen/author_image_height"
        android:layout_marginTop="@dimen/author_image_m_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutAuthorText"
        app:srcCompat="@drawable/hachi" />
</androidx.constraintlayout.widget.ConstraintLayout>